            </call>
            <property name="CoinInfo" expression="json-eval($.data[0])" scope="default" type="STRING" description="SaveCoinInfoResult"/>
            <log level="full" description="LogMessage"/>
            <log description="LastPrice">
                <property name="### lastPrice" expression="json-eval($ctx:CoinInfo.lastPrice)"/>
            </log>
            <respond description="SentResponse"/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
